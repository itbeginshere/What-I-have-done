<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminAddDeny"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    android:background="@color/icons">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp" />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_deny_txt_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Venue"
                android:textSize="20dp"/>

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Class Venue"
                android:id="@+id/add_deny_venue"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_deny_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Price"
                android:textSize="20dp"/>
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Price"
                android:id="@+id/add_deny_price"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_deny_txt_equip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Equipment Needed" />

            <Spinner
                android:id="@+id/add_deny_equip"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:spinnerMode="dropdown">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/add_deny_btn_add"
                android:layout_marginTop="20dp"
                android:background="@color/accent"
                android:text="Add"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <Button
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:id="@+id/add_deny_btn_deny"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/accent"
                android:text="Deny"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>