<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Events"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    android:background="@color/icons">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="300dp"
                android:layout_height="90dp"
                android:layout_marginTop="80dp" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/viewPager"
                android:layout_centerHorizontal="true"
                android:padding="16dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/evt_btn_promo_cards"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:background="@color/accent_Secondary"
                    android:text="Promo Card"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/evt_btn_prv_class"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:background="@color/accent_Secondary"
                    android:text="Private Class"
                    android:textColor="@color/cardview_light_background" />

            </LinearLayout>

            <TextView
                android:id="@+id/evt_txt_cls_pound"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Brief descrption of Pound"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/evt_btn_cls_pound"
                android:layout_width="275dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent"
                android:text="Pound"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/evt_txt_cls_zumba"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Brief descrption of Zumba"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/evt_btn_cls_zumba"
                android:layout_width="275dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent"
                android:text="Zumba"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/evt_txt_cls_balletrip"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Brief descrption of Ballet Rip"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/evt_btn_cls_balletrip"
                android:layout_width="275dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent"
                android:text="Ballet Rip"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/evt_txt_cls_rhythm_pilates"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Brief descrption of Rhythm Pilates"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/evt_btn_cls_rhypilates"
                android:layout_width="275dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:background="@color/accent"
                android:text="Ryhthm Pilates"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/evt_txt_cls_barre"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:text="Brief descrption of Barre"
                android:textAlignment="center"
                android:textSize="16dp"
                android:textColor="@color/primary_text"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/evt_btn_cls_barre"
                android:layout_width="275dp"
                android:layout_height="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="40dp"
                android:background="@color/accent"
                android:text="Barre Time"
                android:textColor="@color/cardview_light_background"
                android:textSize="30dp" />


        </LinearLayout>

    </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/icons"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        android:clickable="true"/>


</android.support.v4.widget.DrawerLayout>