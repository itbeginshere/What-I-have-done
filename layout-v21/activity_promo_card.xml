<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PromoCard"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start"
    android:background="@color/icons">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_dark"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"/>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/pro_card_txt_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Text for promo card"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/pro_card_meth_type"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:entries="@array/cash_card"
            android:spinnerMode="dropdown">

        </Spinner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/pro_card_pur_1"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@color/accent"
                android:text="1 Session"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <Button
                android:id="@+id/pro_card_pur_10"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@color/accent"
                android:text="10 Sessions"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp" />

            <Button
                android:id="@+id/pro_card_pur_20"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:background="@color/accent"
                android:text="20 Sessions"
                android:textColor="@color/cardview_light_background"
                android:textSize="20dp"
                android:layout_marginBottom="40dp"/>



        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>